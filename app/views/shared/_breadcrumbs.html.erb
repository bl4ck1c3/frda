    &#187; <%= render :partial => "shared/ancestor_breadcrumb", :locals => {:document => @document} %>
 <% end %>

	<% if (on_collections_pages || on_show_page) && !on_collection_highlights_page%>
		&#187; <li><%= raw truncate(@page_title) %></li>
	<% end %>
</ul>
