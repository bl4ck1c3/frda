<script type="text/javascript">
  $(document).ready(function(){
    $("#image_workspace").embedPurl({'server': '<%=Frda::Application.config.purl_plugin_server%>',
                                     'druid': '<%= @document[:id] %>',
                                     'size': 'thumb',
                                     'layout': 'thin-nav-bottom',
                                     'width': 425,
                                     'height': 500,
                                     'zoomOnClick': true,
                                     'tooltipTexts': {
                                     '<%= I18n.locale %>': {
                                       'OpenInFullScreen': '<%= t('frda.show.open_in_full_screen') %>',
                                       'Close': '<%= t('frda.show.close') %>'
                                       }
                                     }
                                   });
  });
</script>

<div class="row images-item">
  <div class="span12">
    <h2><%= link_to t('frda.image.detail.title'), images_collection_path %></h2>
 	 <% if @document.catalog_heading(I18n.locale).size > 0 %>
	   <ul class="item-breadcrumb">
	      <li><%= link_to_catalog_heading(@document.catalog_heading(I18n.locale).first).join(" Â» ").html_safe %></li>
	    </ul>
	 <% end %>
  </div>
</div>

<div class="row images-item well well-small">
  <%= render 'previous_next_doc' %>
  <%# if we want to show the Send email action, use partial below instead of button below that %>
  <%#= render :partial => 'show_actions' %>
  <button class="btn btn-small">
     <%= link_to t('frda.sidebar.actions.cite'), citation_catalog_path(:id => @document), {:id => 'citeLink', :class => 'lightboxLink cite'} %>
  </button>
</div>

<div class="row document-details images-item">
  <div class="span6 member-image">
    <div id="image_workspace" class="hidden showOnLoad" ><%=t('frda.show.wait')%></div>
      <noscript>
         <div class="item active">
             <%= link_to image_tag(@document.first_image, :alt => "#{t('frda.collection_members.items_name')} 1 of #{@document.images.size}"),@document.purl %>
		        <% unless @document.purl.blank? %>
		          <div>Permanent URL<%= " (click to view all item images)" if @document.images.size > 1 %>:
		            <span><%= link_to @document.purl, @document.purl, :class => 'purl-link' %></span>
		          </div>
				<% end %>
         </div>
      </noscript>
  </div>

  <div class="span6 metadata">
    <% unless @document.title.nil?%>
      <h3><%= @document.title.first %></h3>
      <% unless @document.mods.note.blank? %>
        <p><%= @document.mods.note.text %></p>
      <% end %>
    <% end %>

    <dl class="dl-invert">
      <% unless @document.mods.physical_description.extent.blank?%>
        <dt><%=t('frda.show.medium')%></dt>
        <dd><%=@document.mods.physical_description.extent.text %></dd>
      <% end %>
      <% unless @document.mods.origin_info.publisher.blank? %>
        <dt><%=t('frda.show.publisher')%></dt>
        <dd><%= @document.mods.origin_info.publisher.text %></dd>
      <% end %>
      <% unless list_is_empty?(@document.collector) %>
        <dt><%=t('frda.show.collector')%></dt>
        <dd><%=show_formatted_list(@document.collector,:facet=>'collector_ssim')%></dd>
      <% end %>
      <% unless list_is_empty?(@document.genre)%>
        <dt><%=t('frda.show.genre')%></dt>
        <dd><%=show_formatted_list(@document.genre,:facet=>'genre_ssim')%></dd>
      <% end %>
      <% unless list_is_empty?(@document.speaker)%>
        <dt><%=t('frda.show.person')%></dt>
        <dd><%=show_formatted_list(@document.speaker,:facet=>'speaker_ssim')%></dd>
      <% end %>
      <% unless list_is_empty?(@document.artist)%>
        <dt><%=t('frda.show.artist')%></dt>
        <dd><%=show_formatted_list(@document.artist,:facet=>'artist_ssim')%></dd>
      <% end %>
      <% if mods_element_dateIssued_present?(@document) %>
         <dt><%=t('frda.show.date')%></dt>
         <dd><%= mods_element_dateIssued(@document) %></dd>
       <% end %>
      <% unless list_is_empty?(@document.format) %>
        <dt><%=t('frda.show.format')%></dt>
        <dd><%=show_formatted_list(@document.format,:facet=>'doc_type_ssim')%></dd>
      <% end %>
      <% unless @document.mods.related_item.location.url.blank? %>
        <dt><%=t('frda.show.source')%></dt>
        <dd><%= link_to_images_item_source(@document) %></dd>
      <% end %>
    </dl>
  </div>
</div>
